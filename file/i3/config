# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
bindsym $mod+Return exec ~/.config/i3/run-notify.sh $term
bindsym $mod+Shift+Return exec ~/.config/i3/run-notify.sh uzbl-browser

new_window 1pixel
hide_edge_borders both

for_window [title="^uzbledit$"] floating enable
for_window [title="^webcam$"] floating enable, border 1pixel

# class                 border  backgr. text    indicator
client.focused          #00ffff #00ffff #000000 #ffff00
client.focused_inactive #000000 #000000 #333333 #484e50
client.unfocused        #333333 #222222 #888888 #292d2e
client.urgent           #2f343a #900000 #ffffff #900000

# kill focused window
bindsym $mod+Shift+c kill

# start dmenu (a program launcher)
bindsym $mod+r exec dmenu_run -fn "bitocra:size=8" -nb "#111" -nf "#0ff" -sb "#0ff" -sf "#000"

# Google-research something
