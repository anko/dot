bindsym $mod+mod1+n exec ~/scpt/googleopen/dmenuwrap.sh 3
# just first link
bindsym $mod+mod1+m exec ~/scpt/googleopen/dmenuwrap.sh 1

# Control volume
bindsym XF86AudioRaiseVolume exec ~/.config/i3/set-volume.sh up
bindsym XF86AudioLowerVolume exec ~/.config/i3/set-volume.sh down
bindsym XF86AudioMute        exec ~/.config/i3/set-volume.sh zero

# Control backlight
bindsym XF86MonBrightnessUp   exec ~/.config/i3/set-backlight.sh up
bindsym XF86MonBrightnessDown exec ~/.config/i3/set-backlight.sh down

